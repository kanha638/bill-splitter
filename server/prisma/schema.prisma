// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Users {
    id          String   @id @default(cuid())
    firstName   String
    lastName    String?  @default("")
    username    String   @unique
    profile_urn String?
    password    String
    email       String   @unique
    createdAt   DateTime
    Disabled    Boolean  @default(false)
}

model Event {
    id           String    @id @default(cuid())
    name         String
    desc         String?
    createrID    String
    invitedUsers String[]
    expenses     Expense[]
    createdAt    DateTime
    active_users String[]
}

model Expense {
    id           String   @id @default(cuid())
    event        Event    @relation(fields: [eventID], references: [id])
    eventID      String
    total_amount Int
    desc         String?
    buyers       Buyers[]
    payers       Payers[]
    createdAt    DateTime
}

model Buyers {
    id           String   @id @default(cuid())
    userID       String
    amount_spent Float
    Expense      Expense? @relation(fields: [expenseId], references: [id])
    expenseId    String?
}

model Payers {
    id          String   @id @default(cuid())
    userID      String
    amount_paid Float
    Expense     Expense? @relation(fields: [expenseId], references: [id])
    expenseId   String?
}

model Invitations {
    id        String   @id @default(cuid())
    userID    String
    eventID   String
    message   String
    token     String
    createdAt DateTime
}
